<h1>{{ title }}</h1>

<table>
  <tr>
    <td>Dname</td>
    <td>Dnumber</td>
    <td>Email</td>
    <td>Phone_Number</td>
  </tr>
  {{#each department}}
    <form method="post">
      <tr>
        <td>{{Name}}</td>
        <td>{{Dnumber}}</td>
        <td>{{Email}}</td>
        <td>{{Phone_Number}}</td>
        <td style="border: none; margin-left: 10px;">
          <button 
            style="margin-left: 10px;" 
            name='delBtn' 
            type="submit" 
            value="{{Dnumber}}" 
            formaction="/delete"
          >
          delete
          </button>
        </td>
      </tr>    
    </form>
  {{/each}}
</table>